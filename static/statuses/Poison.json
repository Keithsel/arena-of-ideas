{
    "name": "Poison",
    "type": "Status",
    "stacking": {
        "type": "Count"
    },
    "clan_origin": "Assassins",
    "listeners": [
        {
            "triggers": [
                {
                    "type": "Repeating",
                    "tick_time": 1.5,
                    "next_tick": 1.5
                }
            ],
            "effect": {
                "type": "List",
                "effects": [
                    {
                        "type": "Damage",
                        "types": [
                            "Poison"
                        ],
                        "value": {
                            "type": "Var",
                            "name": "StackCounter"
                        }
                    },
                    {
                        "type": "AddVar",
                        "name": "PoisonTicksLeft",
                        "status_name": "Poison",
                        "value": {
                            "type": "Sum",
                            "a": {
                                "type": "Var",
                                "name": "PoisonTicksLeft"
                            },
                            "b": {
                                "type": "Const",
                                "value": -1
                            }
                        }
                    },
                    {
                        "type": "If",
                        "condition": {
                            "type": "Equal",
                            "a": {
                                "type": "Const",
                                "value": 0
                            },
                            "b": {
                                "type": "Var",
                                "name": "PoisonTicksLeft"
                            }
                        },
                        "then": {
                            "type": "List",
                            "effects": [
                                {
                                    "type": "AddVar",
                                    "name": "PoisonTicksLeft",
                                    "status_name": "Poison",
                                    "value": {
                                        "type": "Const",
                                        "value": 2
                                    }
                                },
                                {
                                    "type": "AddVar",
                                    "name": "StackCounter",
                                    "status_name": "Poison",
                                    "value": {
                                        "type": "Sum",
                                        "a": {
                                            "type": "Var",
                                            "name": "StackCounter"
                                        },
                                        "b": {
                                            "type": "Const",
                                            "value": -1
                                        }
                                    }
                                }
                            ]
                        },
                        "else": {
                            "type": "Noop"
                        }
                    }
                ]
            }
        },
        {
            "triggers": [
                {
                    "type": "Init"
                }
            ],
            "effect": {
                "preset": "effects/vfx_attach_status.json"
            }
        }
    ],
    "render": {
        "path": "shaders/status/status_default.glsl"
    },
    "vars": {
        "PoisonTicksLeft": 2
    }
}