{
    "name": "Devotee",
    "description": "+1/+2/+3 ATK for each ally with Shield",
    "attack": 1,
    "health": 4,
    "tier": 2,
    "action": {
        "preset": "effects/melee_hit.json"
    },
    "clans": [
        "Protectors"
    ],
    "radius": 0.4,
    "statuses": [
        {
            "name": "ATKforShields",
            "type": "Status",
            "listeners": [
                {
                    "triggers": [
                        {
                            "type": "DetectAttach",
                            "status_name": "Shield",
                            "filter": "Allies"
                        }
                    ],
                    "effect": {
                        "type": "ChangeContext",
                        "target": "Owner",
                        "effect": {
                            "preset": "effects/give_atk.json",
                            "value": {
                                "type": "FindStat",
                                "stat": "Level",
                                "who": "Owner"
                            }
                        }
                    }
                },
                {
                    "triggers": [
                        {
                            "type": "DetectAttach",
                            "status_name": "Shield",
                            "filter": "Allies",
                            "status_action": "Remove"
                        }
                    ],
                    "effect": {
                        "type": "ChangeContext",
                        "target": "Owner",
                        "effect": {
                            "preset": "effects/lose_atk.json",
                            "value": {
                                "type": "FindStat",
                                "stat": "Level",
                                "who": "Owner"
                            }
                        }
                    }
                },
                {
                    "triggers": [
                        {
                            "type": "DetectDeath",
                            "condition": {
                                "type": "And",
                                "a": {
                                    "type": "UnitHasStatus",
                                    "who": "Target",
                                    "status": "Shield"
                                },
                                "b": {
                                    "type": "Faction",
                                    "who": "Target",
                                    "faction": "Player"
                                }
                            }
                        }
                    ],
                    "effect": {
                        "type": "ChangeContext",
                        "target": "Owner",
                        "effect": {
                            "preset": "effects/lose_atk.json",
                            "value": {
                                "type": "FindStat",
                                "stat": "Level",
                                "who": "Owner"
                            }
                        }
                    }
                }
            ]
        }
    ],
    "render": {
        "path": "shaders/default_circle_hero.glsl"
    }
}