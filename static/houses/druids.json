{
    "name": "Druids",
    "color": "#c95a00ff",
    "abilities": {
        "Thorns": {
            "effect": {
                "type": "ChangeStatus",
                "name": "Thorns",
                "charges": {
                    "type": "Var",
                    "var": "Charges"
                },
                "after": {
                    "type": "ShowCurve"
                }
            },
            "description": "Deal X damage\nto attacker",
            "default_vars": {
                "Charges": 1,
                "AttackExtra": 0
            }
        },
        "Rebirth": {
            "effect": {
                "type": "ChangeStatus",
                "name": "Rebirth",
                "charges": {
                    "type": "Var",
                    "var": "Charges"
                },
                "after": {
                    "type": "ShowCurve"
                }
            },
            "description": "After Death\nrevive with X HP",
            "default_vars": {
                "Charges": 1
            }
        }
    },
    "statuses": {
        "Thorns": {
            "trigger": {
                "type": "AfterIncomingDamage",
                "effect": {
                    "type": "If",
                    "condition": {
                        "type": "Not",
                        "condition": {
                            "type": "Source",
                            "name": "Thorns"
                        }
                    },
                    "then": {
                        "type": "Damage",
                        "source": "Thorns",
                        "target": {
                            "type": "Caster"
                        },
                        "value": {
                            "type": "Sum",
                            "a": {
                                "type": "Var",
                                "var": "Charges"
                            },
                            "b": {
                                "type": "AbilityVar",
                                "ability": "Thorns",
                                "var": "AttackExtra"
                            }
                        },
                        "after": {
                            "type": "ShowCurve"
                        }
                    }
                }
            },
            "shader": {
                "path": "shaders/status/default_status.glsl",
                "parameters": {
                    "uniforms": {
                        "u_padding": 1.0
                    }
                },
                "layer": "Unit"
            }
        },
        "Rebirth": {
            "trigger": {
                "type": "AfterDeath",
                "effect": {
                    "type": "If",
                    "target": {
                        "type": "Owner"
                    },
                    "condition": {
                        "type": "IsCorpse",
                        "entity": {
                            "type": "Target"
                        }
                    },
                    "then": {
                        "type": "List",
                        "items": [
                            {
                                "type": "ShowText",
                                "text": "Rebirth",
                                "font": 2
                            },
                            {
                                "type": "Revive",
                                "after": {
                                    "type": "SetOwnerVarInt",
                                    "var": "HpValue",
                                    "value": {
                                        "type": "Var",
                                        "var": "Charges"
                                    }
                                }
                            }
                        ]
                    },
                    "else": {
                        "type": "Noop"
                    }
                }
            },
            "shader": {
                "path": "shaders/status/default_status.glsl",
                "parameters": {
                    "uniforms": {
                        "u_padding": 1.0
                    }
                },
                "layer": "Unit"
            }
        }
    }
}