{
    "name": "Vampires",
    "color": "#7f0000ff",
    "abilities": {
        "Devour": {
            "description": "Kill target, gain +1/+1\nper target current HP",
            "effect": {
                "type": "List",
                "effects": [
                    {
                        "type": "TakeVar",
                        "entity": {
                            "type": "Target"
                        },
                        "var": "HpCurrent",
                        "new_name": "Charges",
                        "effect": {
                            "type": "Kill",
                            "then": {
                                "type": "ChangeContext",
                                "owner": {
                                    "type": "Target"
                                },
                                "target": {
                                    "type": "Owner"
                                },
                                "effect": {
                                    "type": "ChangeStatus",
                                    "name": "Devour",
                                    "charges": {
                                        "type": "Var",
                                        "var": "Charges"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        "SiphonLife": {
            "description": "Steal 1 HP\nfrom target",
            "effect": {
                "type": "List",
                "effects": [
                    {
                        "type": "Damage",
                        "value": {
                            "type": "Const",
                            "value": 1
                        },
                        "then": {
                            "type": "AddStatus",
                            "target": {
                                "type": "Owner"
                            },
                            "name": "SiphonLife"
                        }
                    },
                    {
                        "type": "ShowText",
                        "text": "SiphonLife"
                    }
                ]
            }
        }
    },
    "statuses": {
        "Devour": {
            "trigger": {
                "type": "List",
                "triggers": [
                    {
                        "type": "OnStatusChargeAdd",
                        "effect": {
                            "type": "ChangeStats",
                            "delta": {
                                "type": "Const",
                                "value": 1
                            }
                        }
                    },
                    {
                        "type": "OnStatusChargeRemove",
                        "effect": {
                            "type": "ChangeStats",
                            "delta": {
                                "type": "Const",
                                "value": -1
                            }
                        }
                    }
                ]
            }
        },
        "SiphonLife": {
            "trigger": {
                "type": "List",
                "triggers": [
                    {
                        "type": "OnStatusChargeAdd",
                        "effect": {
                            "type": "ChangeMaxHp",
                            "delta": {
                                "type": "Const",
                                "value": 1
                            }
                        }
                    },
                    {
                        "type": "OnStatusChargeRemove",
                        "effect": {
                            "type": "ChangeMaxHp",
                            "delta": {
                                "type": "Const",
                                "value": -1
                            }
                        }
                    }
                ]
            }
        }
    }
}