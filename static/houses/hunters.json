{
    "name": "Hunters",
    "color": "#027200ff",
    "abilities": {
        "Mark": {
            "description": "Add X\nto taken damage",
            "effect": {
                "type": "ChangeStatus",
                "name": "Mark",
                "charges": {
                    "type": "Var",
                    "var": "Charges"
                },
                "after": {
                    "type": "ShowCurve"
                }
            },
            "default_vars": {
                "Charges": 1
            }
        },
        "Shoot": {
            "description": "Deal attack damage\nto random enemy\nX times",
            "effect": {
                "type": "Repeat",
                "effect": {
                    "target": {
                        "type": "RandomUnit",
                        "faction": {
                            "type": "Opposite",
                            "faction": {
                                "type": "Owner"
                            }
                        }
                    },
                    "type": "If",
                    "condition": {
                        "type": "Not",
                        "condition": {
                            "type": "IsCorpse",
                            "entity": {
                                "type": "Target"
                            }
                        }
                    },
                    "then": {
                        "type": "Damage",
                        "value": {
                            "type": "Var",
                            "var": "AttackValue"
                        },
                        "after": {
                            "type": "ShowCurve",
                            "after": {
                                "type": "PlaySound",
                                "sound": "HitRange"
                            }
                        }
                    },
                    "else": {
                        "type": "Noop"
                    }
                },
                "count": {
                    "type": "Var",
                    "var": "Charges"
                }
            },
            "default_vars": {
                "Charges": 1
            }
        }
    },
    "statuses": {
        "Mark": {
            "trigger": {
                "type": "ModifyIncomingDamage",
                "value": {
                    "type": "Sum",
                    "a": {
                        "type": "Var",
                        "var": "Damage"
                    },
                    "b": {
                        "type": "Var",
                        "var": "Charges"
                    }
                }
            },
            "shader": {
                "path": "shaders/status/default_status.glsl",
                "parameters": {
                    "uniforms": {
                        "u_padding": 1.0
                    }
                },
                "layer": "Unit"
            }
        }
    }
}