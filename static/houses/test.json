                                    "u_color": "#dc6612",
                                    "u_alpha": 1.0,
                                    "u_spin_part": -0.1,
                                    "u_move_speed": -0.5,
                                    "u_size_amp": 0.1
                                },
                                "instances": 3,
                                "vertices": 1
                            }
                        }
                    }
                },
                "count": {
                    "type": "Var",
                    "var": "Charges"
                }
            },
            "description": "Summon a 5/5\nTreant with\n5 Defense"
        },
        "Grow": {
            "effect": {
                "type": "ChangeStatus",
