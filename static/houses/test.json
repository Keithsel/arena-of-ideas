                        "target": {
                            "type": "Owner"
                        }
                    }
                }
            },
            "default_vars": {
                "Charges": 1
            }
        },
        "Shoot": {
            "description": "Deal attack damage\nto random enemy",
            "effect": {
                "type": "Repeat",
                "effect": {
                    "target": {
                        "type": "RandomUnit",
                        "faction": {
                            "type": "Opposite",
                            "faction": {
                                "type": "Owner"
                            }
                        }
                    },
                    "type": "If",
                    "condition": {
                        "type": "Not",
                        "condition": {
                            "type": "IsCorpse",
                            "entity": {
                                "type": "Target"
                            }
                        }
                    },
                    "then": {
                        "type": "Damage",
                        "value": {
                            "type": "Var",
                            "var": "AttackValue"
                        },
                        "after": {
                            "type": "ShowCurve"
                        }
                    },
                    "else": {
                        "type": "Noop"
                    }
                },
                "count": {
                    "type": "Var",
                    "var": "Charges"
                }
            },
            "default_vars": {
                "Charges": 1
            }
        },
        "Empower": {
            "effect": {
                "type": "ChangeStatus",
                "name": "Empower",
                "charges": {
                    "type": "Var",
                    "var": "Charges"
                },
                "after": {
                    "type": "ShowCurve"
                }
            },
            "description": "Next damage\nincreased by 1",
            "default_vars": {
                "Charges": 1,
                "AttackExtra": 0,
                "Persistent": 0
            }
        },
        "Devour": {
            "description": "Kill target, gain +1/+1\nper target HP",
