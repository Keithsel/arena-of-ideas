{
    "name": "Necromancers",
    "color": "#4B0082",
    "abilities": {
        "Reanimate": {
            "description": "Revive unit after death\nwith 1 HP and reversed faction",
            "effect": {
                "type": "AddStatus",
                "name": "Reanimate"
            }
        }
    },
    "statuses": {
        "Reanimate": {
            "trigger": {
                "type": "AfterDeath",
                "effect": {
                    "type": "If",
                    "condition": {
                        "type": "IsCorpse",
                        "entity": {
                            "type": "Owner"
                        }
                    },
                    "then": {
                        "type": "Revive",
                        "target": {
                            "type": "Owner"
                        },
                        "after": {
                            "type": "SetOwnerVarFaction",
                            "var": "Faction",
                            "value": {
                                "type": "Opposite",
                                "faction": {
                                    "type": "Target"
                                }
                            },
                            "after": {
                                "type": "SetOwnerVarInt",
                                "var": "HpValue",
                                "value": {
                                    "type": "Const",
                                    "value": 1
                                }
                            }
                        }
                    },
                    "else": {
                        "type": "Noop"
                    }
                }
            }
        }
    }
}