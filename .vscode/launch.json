    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug custom game",
            "cargo": {
                "args": [
                    "build",
                    "--bin=arena-of-ideas",
                    "--package=arena-of-ideas",
                ],
                "filter": {
                    "name": "arena-of-ideas",
                    "kind": "bin"
                }
            },
            "args": [
                "custom-game",
                "--config",
                "local_configs/custom_config.json"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug game",
            "cargo": {
                "args": [
                    "build",
                    "--bin=arena-of-ideas",
                    "--package=arena-of-ideas",
                ],
                "filter": {
                    "name": "arena-of-ideas",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'arena-of-ideas'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=arena-of-ideas",
                    "--package=arena-of-ideas"
                ],
                "filter": {
                    "name": "arena-of-ideas",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}