{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"env": {
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"label": "Format Ron",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "find . -iname '*.ron' -exec ronfmt \"{}\" \\;"
		},
		{
			"label": "Flamegraph Run Debug",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "sudo cargo flamegraph --dev"
		},
		{
			"label": "Flamegraph Run Release",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "sudo cargo flamegraph"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--",
				"--show-output"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Test",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "debug",
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Build Mac",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "warn",
				"CARGO_MANIFEST_DIR": "."
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release",
				"--target",
				"x86_64-pc-windows-gnu"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Build Win",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "warn",
				"CARGO_MANIFEST_DIR": "."
			}
		}
	]
}