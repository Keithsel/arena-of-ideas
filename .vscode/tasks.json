{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run Game",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "debug"
			}
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--",
				"--show-output"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Test",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "debug",
				"RUST_BACKTRACE": "0"
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Build Mac",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "warn",
				"CARGO_MANIFEST_DIR": "."
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release",
				"--target",
				"x86_64-pc-windows-gnu"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Build Win",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "warn",
				"CARGO_MANIFEST_DIR": "."
			}
		}
	]
}