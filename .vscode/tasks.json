{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Login",
			"args": [
				"--features",
				"bevy/dynamic_linking",
				"--",
				"--mode",
				"login",
			],
			"group": {
				"kind": "build"
			},
			"env": {
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Clean",
			"args": [
				"--features",
				"bevy/dynamic_linking",
				"--",
				"--mode",
				"clean",
			],
			"group": {
				"kind": "build"
			},
			"env": {
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Regular",
			"args": [
				"--features",
				"bevy/dynamic_linking",
				"--",
				"--mode",
				"regular"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"env": {
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Test Scenarios",
			"args": [
				"--",
				"--mode",
				"test"
			],
			"group": {
				"kind": "build"
			},
			"env": {
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"label": "Format Ron",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "find . -iname '*.ron' -exec ronfmt \"{}\" \\;"
		},
		{
			"label": "Flamegraph Run Debug",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "sudo cargo flamegraph --dev -- --mode regular"
		},
		{
			"label": "Flamegraph Run Release",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "sudo cargo flamegraph"
		},
		{
			"label": "Mac lipo",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command": "lipo \"target/x86_64-apple-darwin/release/arena-of-ideas\" \"target/aarch64-apple-darwin/release/arena-of-ideas\" -create -output \"ArenaOfIdeas.app/Contents/MacOS/ArenaOfIdeas\""
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--",
				"--show-output"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Test",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "debug",
				"RUST_BACKTRACE": "1"
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Build Mac",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "warn",
				"CARGO_MANIFEST_DIR": "."
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release",
				"--target",
				"x86_64-pc-windows-msvc"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Build Win",
			"group": {
				"kind": "build"
			},
			"env": {
				"LOG": "warn",
				"CARGO_MANIFEST_DIR": "."
			}
		}
	]
}